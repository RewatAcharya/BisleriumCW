@using Bislerium.Domain.Entity.Users
@model ApplicationUser

@{
    Layout = "_Profile";
}
<style>
    /* Add your custom CSS styles here */
    .profile-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .cover-image {
        width: 100%;
        height: 200px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        object-fit: cover;
        margin-bottom: 20px;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
       
        border: 5px solid #fff; /* Add a white border for contrast */
    }



        .profile-details p {
            margin: 5px 0;
        }

        .profile-details strong {
            font-weight: bold;
        }
</style>

<div class="profile-container">
    <img src="~/images/covers/@Model.CoverUrl" alt="Cover Picture" class="cover-image" />
    <img src="~/images/profiles/@Model.ProfileUrl" alt="Profile Picture" class="profile-image" />
    <div class="profile-details">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    </div>
</div>
